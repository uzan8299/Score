<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uzan8299.score.Main2Activity">

    <Button
        android:id="@+id/buttonTambah1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:onClick="tambahP1"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/scoreP1"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonKurang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:onClick="kurangP1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonTambah1"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonReset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:onClick="resetP1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonKurang1"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonKurang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:onClick="kurangP2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonTambah2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonKurang1"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.712" />


    <Button
        android:id="@+id/buttonTambah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:onClick="tambahP2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonTambah1"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.712"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/scoreP2" />

    <Button
        android:id="@+id/buttonReset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:onClick="resetP2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonKurang2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonReset1"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.712" />

    <TextView
        android:id="@+id/scoreP1"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="56sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/scoreP2"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/P1" />

    <TextView
        android:id="@+id/scoreP2"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="56sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/P2" />

    <TextView
        android:id="@+id/P1"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="playerName"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/P2"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/P2"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />








</android.support.constraint.ConstraintLayout>
